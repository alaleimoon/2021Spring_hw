(define (assemble prog [prog-org prog])
  (if (empty? prog)
      '()
      (cons
       (cond
         [(= 3 (length (car prog)))
          (append
           (opcode-helper (cadr (car prog)) opcode-table)
           (if (equal? 'data (cadr (car prog)))
